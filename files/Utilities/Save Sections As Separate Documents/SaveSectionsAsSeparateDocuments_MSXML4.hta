   //alert("selectionBegin: "+selectionBegin+"\n\n"+"el: "+el);
   selectElements(selectionBegin,el);
  }
 }

 //обработка выделения с зажатым контролом
 if (event.ctrlKey) {
  if (el.className=="el_") {
   if (selectedElements[evaledN]!=evaledN) {
    selectedElements[evaledN]=evaledN;
